@model APPR6312_POE_Web_Application.Models.TblDisaster

@{
    ViewData["Title"] = "DeleteDisaster";
}

<style>
    /*Hiding navbar (W3Schools, 2023)*/
    .navbar {
        visibility: hidden;
    }

    /*Hiding footer (W3Schools, 2023)*/
    footer {
        visibility: hidden;
    }

    body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    /*Styling the navigation menu (W3Schools, 2023)*/
    .topnav {
        width: 100%;
        background-image: linear-gradient(to left, #FF3300, #800080);
        overflow: auto;
        margin: 0; /*Removing default margin (W3Schools, 2023)*/
        padding: 0; /*Removing default padding (W3Schools, 2023)*/
    }

    /*Navigation links (W3Schools, 2023)*/
    .topnav a, .topnav p {
        float: left;
        padding: 12px;
        color: white;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        width: 16.666%; /*Six equal-width links (W3Schools, 2023)*/
        text-align: center;
        box-sizing: border-box; /*Including padding and border in the element's total width (W3Schools, 2023)*/
        margin: 0; /*Removing any margin (W3Schools, 2023)*/
        line-height: 1; /*Reseting line height to eliminate extra space (W3Schools, 2023)*/
    }

    /*Adding a background color on mouse-over (W3Schools, 2023)*/
    .topnav a:hover {
        background-color: #FF3300;
    }

    .header {
        width: 100%;
        margin: 50px auto 0px;
        color: white;
        background: #800080;
        text-align: center;
        border: 1px solid #FF3300;
        border-bottom: none;
        border-radius: 10px 10px 0px 0px;
        padding: 20px;
    }

    .btn {
        padding: 10px;
        font-size: 20px;
        font-weight: bold;
        color: white;
        background: #800080;
        border: none;
        border-radius: 15px;
    }

    .btn:hover {
        background: #FF3300;
    }

    table {
        width: 100%;
        table-layout: fixed;
        border: 2px solid #FF3300;
    }

    th, td {
        text-align: center;
        border: 2px solid #FF3300;
    }

    th {
        width: 50%;
    }

    .footer1 {
        text-align: center;
        padding: 3px;
        background-image: linear-gradient(to left, #FF3300, #800080);
        color: white;
    }
</style>

<!-- Navigation bar with links to other pages (W3Schools, 2023)-->
<nav class="topnav" id="myTopnav">
    <a asp-controller="Admin" asp-action="AdminHome">Home</a>
    <a asp-controller="Goods" asp-action="ViewGoods">Goods Donations</a>
    <a asp-controller="Monetary" asp-action="ViewMonetary">Monetary Donations</a>
    <a asp-controller="Disaster" asp-action="ViewDisaster">Disasters</a>
    <a asp-controller="Category" asp-action="ViewCategory">Categories</a>
    <p><b>@DisplayUsername.passUsername</b></p>
</nav>

<br />

<div class="header">
    <!--The header is allocated on top of the form (W3Schools, 2023)-->
    <h1>Delete Disaster</h1>
</div>
<br />

<h3>Are you sure you want to delete this?</h3>

<br />

<div style="text-align: center; background-color: white; color: black; padding: 20px;">
    <table style ="width: 100%;">
        <tr>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <td>@Html.DisplayFor(model => model.StartDate)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <td>@Html.DisplayFor(model => model.EndDate)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Location)</th>
            <td>@Html.DisplayFor(model => model.Location)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <td>@Html.DisplayFor(model => model.Description)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Username)</th>
            <td>@Html.DisplayFor(model => model.Username)</td>
        </tr>
    </table>
    
    <br />

    <form asp-action="DeleteDisaster">
        <input type="hidden" asp-for="DisasterId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ViewDisaster" class="btn">Back</a>
    </form>
</div>

<br />
<div class="footer1">
    <p>
        Copyright ©2023 Disaster Alleviation Foundation. All rights reserved
    </p>
</div>
