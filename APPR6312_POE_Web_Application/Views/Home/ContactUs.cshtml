@{
    ViewData["Title"] = "ContactUs";
}

<style>
    /*Hiding navbar (W3Schools, 2023)*/
    .navbar {
        visibility: hidden;
    }

    /*Hiding footer (W3Schools, 2023)*/
    footer {
        visibility: hidden;
    }

    body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    /*Styling the navigation menu (W3Schools, 2023)*/
    .topnav {
        width: 100%;
        background-image: linear-gradient(to left, #FF3300, #800080);
        overflow: auto;
        margin: 0; /*Removing default margin (W3Schools, 2023)*/
        padding: 0; /*Removing default padding (W3Schools, 2023)*/
    }

    /*Navigation links (W3Schools, 2023)*/
    .topnav a, .topnav p {
        float: left;
        padding: 12px;
        color: white;
        text-decoration: none;
        font-size: 16px;
        font-weight: bold;
        width: 25%; /*Six equal-width links (W3Schools, 2023)*/
        text-align: center;
        box-sizing: border-box; /*Including padding and border in the element's total width (W3Schools, 2023)*/
        margin: 0; /*Removing any margin (W3Schools, 2023)*/
        line-height: 1; /*Reseting line height to eliminate extra space (W3Schools, 2023)*/
    }

    /*Adding a background color on mouse-over (W3Schools, 2023)*/
    .topnav a:hover {
        background-color: #FF3300;
    }

    .contact-info {
        margin-top: 30px;
    }

    .contact-heading {
        margin-top: 20px;
    }

    .map-section {
        margin-top: 40px;
    }

    .map-container {
        position: relative;
        width: 100%;
        height: 400px; /*Adjust the height as needed (W3Schools, 2023)*/
        margin-top: 20px;
    }

    .map-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .footer1 {
        text-align: center;
        padding: 3px;
        background-image: linear-gradient(to left, #FF3300, #800080);
        color: white;
    }
</style>

